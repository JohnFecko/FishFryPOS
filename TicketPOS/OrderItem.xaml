<UserControl x:Class="TicketPOS.OrderItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicketPOS"
             mc:Ignorable="d" d:DesignWidth="500" Loaded="UserControl_Loaded">
    <Grid>

        <Label x:Name="lblItem" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="lblPrice" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0" FontSize="18"/>
        <ComboBox x:Name="comboQuantity" HorizontalAlignment="Right" Margin="0,2,105,0" VerticalAlignment="Top" Width="100" FontSize="18" SelectionChanged="comboQuantity_SelectionChanged"/>
        <TextBox x:Name="txtTotal" HorizontalAlignment="Right" Height="30" Margin="0,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" FontSize="18" IsReadOnly="True"/>

    </Grid>
</UserControl>
